#

ARGF.each do |line|
  begin
    case line
    when /^\s*$/ then next
    when /^\s*#/ then next
    when /^\s*end\s*$/ then next
    when line.length >= 200 then next
    else puts line.length
    end
  rescue ArgumentError
    # Ignore line that results in ArgumentError due to UTF-8 encoding errors
  end
end
